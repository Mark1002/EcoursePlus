<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ScoreListItemScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="100"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ScoreListItemScore"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ScoreListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="homework 1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            	android:id="@+id/ScoreListItemPercentage"
            	android:layout_width="50dp"
            	android:layout_height="wrap_content"
            	android:text="100%"
            	android:textAppearance="?android:attr/textAppearanceSmall" />

        	<TextView
	            android:id="@+id/ScoreListItemPosition"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:text="1/100"
            	android:textAppearance="?android:attr/textAppearanceSmall" />         
        </LinearLayout>      
    </LinearLayout>
</RelativeLayout>
